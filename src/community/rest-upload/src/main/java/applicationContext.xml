<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="resumableUploadMapping" class="org.geoserver.rest.RESTMapping">
		<property name="routes">
			<map>
				<entry>
					<key>
						<value>/resumableupload</value>
					</key>
					<value>resumableUploadFinder</value>
				</entry>
				<entry>
					<key>
						<value>/resumableupload/{uploadId}</value>
					</key>
					<value>resumableUploadFinder</value>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="resumableUploadFinder" class="org.geoserver.restupload.ResumableUploadCatalogFinder" parent="abstractCatalogFinder"/>

</beans>
